{{#if posts}}
  <h2
    class="mt-4 text-3xl font-extrabold tracking-tight text-white sm:mt-0 gh-title sm:text-4xl"
  >
    Featured {{plural pagination.total empty="No Articles" singular="Article" plural="Articles"}}
  </h2>
  {{#match @custom.featured_posts_style "Full Width"}}
    {{#foreach posts}}
      <div class="relative h-auto mt-4 bg-white rounded-lg sm:mt-8 first:mt-0 fade-in-point">
        <div
          class="relative h-40 bg-white sm:h-80 md:absolute md:left-0 md:w-1/2"
        >
          {{#if feature_image}}
            <img
              class="object-cover w-full h-full grayscale"
              src="{{img_url feature_image size="m"}}"
              alt="{{title}}"
            />
          {{else}}
            <img
              class="object-cover w-full h-full grayscale"
              src="{{#if @custom.default_image_posts}}
        {{@custom.default_image_posts}}
{{else}}
  {{asset "images/default.jpg"}}
{{/if}}"
              alt=""
            />
          {{/if}}
          <div
            aria-hidden="true"
            class="absolute inset-0 bg-gradient-to-r from-primary to-graySecondary mix-blend-multiply fade-in-point"
          ></div>
        </div>
        <div
          class="relative max-w-md p-4 mx-auto sm:p-0 sm:pt-4 sm:h-80 sm:max-w-7xl"
        >
          <div class="md:ml-auto md:w-1/2 md:px-4">
            <a href="{{url}}">
              <h2
                class="text-xl font-semibold transition-colors duration-300 ease-in-out text-grayPrimary hover:text-mypink"
              >
                {{title}}
              </h2>
            </a>
                    <div>

      {{#foreach tags}}
       <span class="my-2 font-mono inline-flex items-center px-3 py-0.5 text-xs font-medium bg-primary text-grayPrimary">{{name}}</span>
      {{/foreach}}
           
        </div>
        <div class="text-sm">
            <span>
              {{reading_time}}
            </span>
            <span aria-hidden="true">
              ·
            </span>
            <time datetime="{{date format="YYYY-MM-DD"}}">
              {{date format="DD.MM.YYYY"}}
            </time>
            </div>
            <p
              class="p-0 mt-2 text-sm sm:mt-3 lg:text-base md:text-base sm:text-sm text-grayPrimary"
            >
              {{excerpt}}
            </p>
            <a
              href="{{url}}"
              class="text-base font-semibold text-center transition-colors duration-300 ease-in-out text-grayPrimary hover:text-mypink"
            >
              Read more
              <span aria-hidden="true">
                →
              </span>
            </a>
          </div>
      </div>
      </div>
    {{/foreach}}
  {{/match}}
  {{#match @custom.featured_posts_style "Classic Cards"}}
        <div class="grid grid-flow-col gap-5 mx-auto mt-12 overflow-x-auto whitespace-wrap fade-in-point">

 
      {{#foreach posts}}

<article class="z-0 flex flex-col h-auto overflow-hidden rounded-lg article-tag">
  <a class="" href="{{url}}">
    <div class="relative flex-shrink-0 w-full h-auto bg-white sm:h-80 md:left-0">
      {{#if feature_image}}
        <img
          class="object-cover w-full h-full grayscale"
          srcset="{{img_url feature_image size="s"}}
             150w,
            {{img_url feature_image size="m"}}
             300w,
            {{img_url feature_image size="l"}}
             5000w,
            {{img_url feature_image size="xl"}}
             1000w"
          sizes="(max-width: 300px) 200px, 300px"
          src="{{img_url feature_image size="m"}}"
          alt="{{title}}"
        />
      {{else}}
        <img
          class="object-cover w-full h-full grayscale"
          src="{{#if @custom.default_image_posts}}{{@custom.default_image_posts}}{{else}}{{asset "images/default.jpg"}}{{/if}}"
          sizes="(max-width: 600px) 400px, 600px"
          src="{{img_url feature_image size="m"}}"
          alt="{{title}}"
        />
      {{/if}}
<div
  aria-hidden="true"
  class="absolute inset-0 bg-gradient-to-r from-primary to-graySecondary mix-blend-multiply"
></div>
    </div>
    <div class="flex flex-col justify-between flex-1 p-6 bg-white">
      <div class="flex-1">
        <h2 class="text-xl font-semibold transition-colors duration-300 ease-in-out text-grayPrimary hover:text-mypink">
          {{title}}
        </h2>
              {{#foreach tags}}
       <span class="my-2 font-mono inline-flex items-center px-3 py-0.5 text-xs font-medium bg-primary text-grayPrimary">{{name}}</span>
      {{/foreach}}
        <p class="mt-3 text-base text-graySecondary">
          {{excerpt}}
        </p>
      </div>
      <div class="flex my-4 space-x-1 text-sm text-graySecondary">
        <time datetime="{{date format="YYYY-MM-DD"}}">
          {{date format="DD.MM.YYYY"}}
        </time>
        <span aria-hidden="true">
          ·
        </span>
        <span>
          {{reading_time}}
        </span>
      </div>
      <div class="w-full mx-auto mb-2 text-center">
        <a
          href="{{url}}"
          class="text-base font-semibold transition-colors duration-300 ease-in-out text-grayPrimary hover:text-mypink "
        >
          Read more
          <span aria-hidden="true">
            →
          </span>
        </a>
      </div>
    </div>
  </a>
</article>
    {{/foreach}}
       </div>

  {{/match}}
{{/if}}