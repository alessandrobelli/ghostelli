{{#if @member}}
  <div class="px-4 py-12 mx-auto max-w-7xl sm:px-6 lg:py-16 lg:px-8">
    <div class="flex items-center">
      <div>
        <img
          class="inline-block rounded-full h-9 w-9"
          src="{{@member.avatar_image}}"
          alt=""
        />
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-graySecondary">
          {{#if @member.name}}
            {{@member.name}}
          {{else}}
            {{@member.email}}
          {{/if}}
        </p>
        <button
          class="text-xs font-medium text-primary group-hover:text-graySecondary"
          data-portal="account"
        >
          View profile
        </button>
      </div>
    </div>
  </div>
{{else}}
  <div class="px-4 py-12 mx-auto max-w-7xl sm:px-6 lg:py-16 lg:px-8">
    <h2
      class="inline text-3xl font-extrabold tracking-tight sm:block sm:text-4xl text-graySecondary"
    >
      {{@custom.sub_homepage_text}}
    </h2>
    <form
      class="block mx-auto mt-8 sm:flex subscription-form"
      data-members-form="signup"
    >
      <label for="email-address" class="sr-only">
        Email address
      </label>
      <div class="w-full sm:ml-0 sm:w-auto">
        <input
          id="name-address"
          name="name"
          type="name"
          autocomplete="name"
          data-members-name
          class="w-full px-5 py-3 placeholder-gray-500 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs"
          placeholder="Enter your name"
        />
      </div>
      <div class="w-full sm:ml-3 sm:w-auto">
        <input
          id="email-address"
          name="email"
          type="email"
          autocomplete="email"
          data-members-email
          required
          class="w-full px-5 py-3 placeholder-gray-500 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs"
          placeholder="Enter your email"
        />
      </div>
      <div
        class="w-full mt-3 rounded-md shadow sm:mt-0 sm:ml-3 sm:flex-shrink-0 sm:w-auto"
      >
        <button
          type="submit"
          class="flex items-center justify-center w-full px-5 py-3 text-base font-medium border border-transparent rounded-md text-grayPrimary bg-primary hover:bg-mypink focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
        >
          Sign Up
        </button>
        <div class="success-message">
          <div
            aria-live="assertive"
            class="fixed inset-0 flex items-end px-4 py-6 pointer-events-none sm:p-6 sm:items-start"
          >
            <div
              class="flex flex-col items-center w-full space-y-4 sm:items-end"
            >
              <div
                class="w-full max-w-sm overflow-hidden bg-white rounded-lg shadow-lg pointer-events-auto ring-1 ring-black ring-opacity-5"
              >
                <div class="p-4">
                  <div class="flex items-start">
                    <div class="flex-shrink-0">
                      <!-- Heroicon name: outline/check-circle -->
                      <svg
                        class="w-6 h-6 text-green-400"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        aria-hidden="true"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                      </svg>
                    </div>
                    <div class="ml-3 w-0 flex-1 pt-0.5">
                      <p class="text-sm font-bold text-gray-900">
                        Successfully sent!
                      </p>
                      <p class="mt-1 text-sm text-gray-500">
                        Check your inbox for the email confirmation.
                      </p>
                    </div>
                    <div
                      class="flex flex-shrink-0 ml-4"
                      onclick="hideNotification()"
                    >
                      <button
                        type="button"
                        class="inline-flex text-gray-400 bg-white rounded-md hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
                      >
                        <span class="sr-only">
                          Close
                        </span>
                        <svg
                          class="w-5 h-5"
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 20 20"
                          fill="currentColor"
                          aria-hidden="true"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                            clip-rule="evenodd"
                          ></path>
                        </svg>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="error-message">
          <div
            aria-live="assertive"
            class="fixed inset-0 flex items-end px-4 py-6 pointer-events-none sm:p-6 sm:items-start"
          >
            <div
              class="flex flex-col items-center w-full space-y-4 sm:items-end"
            >
              <div
                class="w-full max-w-sm overflow-hidden bg-white rounded-lg shadow-lg pointer-events-auto ring-1 ring-black ring-opacity-5"
              >
                <div class="p-4">
                  <div class="flex items-start">
                    <div class="flex-shrink-0">
                      <svg
                        class="w-5 h-5 text-mypink"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        aria-hidden="true"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                          clip-rule="evenodd"
                        ></path>
                      </svg>
                    </div>
                    <div class="ml-3 w-0 flex-1 pt-0.5">
                      <p class="text-sm font-bold text-gray-900">
                        Error!
                      </p>
                      <p class="mt-1 text-sm text-gray-500">
                        Something went wrong.
                      </p>
                    </div>
                    <div class="flex flex-shrink-0 ml-4">
                      <button
                        onclick="hideNotification()"
                        type="button"
                        class="inline-flex bg-white rounded-md text-graySecondary hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
                      >
                        <span class="sr-only">
                          Close
                        </span>
                        <svg
                          class="w-5 h-5"
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 20 20"
                          fill="currentColor"
                          aria-hidden="true"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                            clip-rule="evenodd"
                          ></path>
                        </svg>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
{{/if}}