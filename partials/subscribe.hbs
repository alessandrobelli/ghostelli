<!-- If member, show the name + button for account -->
<!-- If not, show the form to sign for the newsletter -->
{{#if @member}}
  <div class="w-full py-4 mx-auto md:py-12 sm:max-w-7xl lg:py-16">
    <div class="flex items-center">
      <div>
        <img
          class="inline-block rounded-full h-9 w-9"
          src="{{@member.avatar_image}}"
          alt="Your Profile Picture"
        />
      </div>
      <div class="ml-3">
        <p class="font-medium text-graySecondary">
          {{#if @member.name}}
            {{@member.name}}
          {{else}}
            {{@member.email}}
          {{/if}}
        </p>
        <button
          class="font-medium text-primary group-hover:text-graySecondary"
          data-portal="account"
          title="your account"
        >
          View profile
        </button>
      </div>
    </div>
  </div>
{{else}}
  <div class="py-4 mx-auto md:py-12 sm:max-w-7xl">
    <h2
      class="inline text-3xl font-extrabold tracking-tight text-white sm:block sm:text-4xl"
    >
      {{@custom.subscribe_homepage_text}}
    </h2>
    <form
      class="block mx-auto mt-8 sm:flex subscription-form"
      data-members-form="signup"
    >
      <div class="flex flex-wrap mx-auto sm:flex-nowrap max-w-7xl">
        <label for="email-address" class="sr-only">
          Email address
        </label>
        <div class="w-full sm:ml-0 sm:w-auto">
          <input
            id="name-address"
            name="name"
            type="name"
            autocomplete="name"
            data-members-name
            class="w-full px-5 py-3 placeholder-gray-500 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs"
            placeholder="Enter your name - not mandatory"
          />
        </div>
        <div class="w-full mt-2 sm:mt-0 sm:ml-3 sm:w-auto">
          <input
            id="email-address"
            name="email"
            type="email"
            autocomplete="email"
            data-members-email
            required
            class="w-full px-5 py-3 placeholder-gray-500 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs"
            placeholder="Enter your email"
          />
        </div>
        <div
          class="w-full mt-3 rounded-md shadow sm:mt-0 sm:ml-3 sm:flex-shrink-0 sm:w-auto"
        >
          <button
            type="submit"
            class="flex items-center justify-center w-full px-5 py-3 text-base font-medium border border-transparent rounded-md text-grayPrimary bg-primary hover:bg-mypink focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
          >
            Sign Up
          </button>
    {{> signup-messages}}
        </div>
      </div>
    </form>
  </div>
{{/if}}