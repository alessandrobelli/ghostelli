{{!--
Re-usable card for linking to posts
--}}
<article class="w-full p-4 my-1 overflow-hidden">
    <a class="" href="{{url}}">
        {{#if feature_image}}
            <img class="inline-block object-cover w-full h-32 align-middle md:h-64"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 600px"
                src="{{img_url feature_image size="m"}}"
                alt="{{title}}"
            />
        {{/if}}
        <div class="w-full">
            <div class="py-2 mx-auto text-xs font-bold text-center font-text text-grayPrimary"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span class="bull">&bull;</span> {{reading_time}}</div>
            <h2 class="text-2xl font-header text-mypink">{{title}}</h2>
            <p class="pb-4 text-xs font-text">{{excerpt}} ...</p>
            <div class="w-full mx-auto text-center"><button class="p-2 text-sm antialiased rounded-none text-grayPrimary font-text bg-secondary hover:bg-secondarydarker">Read more</button>
            </div>
        </div>
    </a>
</article>
