{{!
Re-usable card for linking to posts
}}
<article class="w-full overflow-hidden md:w-1/4 md:px-2 article-tag">
  <a class="" href="{{url}}">
    {{#if feature_image}}
      <img
        class="inline-block object-cover w-full h-24 mb-1 align-middle hover:opacity80"
        srcset="{{img_url feature_image size="s"}}
           150w,
          {{img_url feature_image size="m"}}
           300w,
          {{img_url feature_image size="l"}}
           5000w,
          {{img_url feature_image size="xl"}}
           1000w"
        sizes="(max-width: 300px) 200px, 300px"
        src="{{img_url feature_image size="m"}}"
        alt="{{title}}"
      />
    {{else}}
      <img
        class="inline-block object-cover w-full h-24 mb-1 align-middle hover:opacity80"
        src="{{@custom.default_image_posts}}"
        sizes="(max-width: 600px) 400px, 600px"
        src="{{img_url feature_image size="m"}}"
        alt="{{title}}"
      />
    {{/if}}
    <div class="w-full">
      <h2
        class="text-base font-bold font-header text-primary hover:text-mypink dark:hover:text-mypink"
      >
        {{title}}
      </h2>
      <div
        class="py-1 mx-auto text-xs font-bold font-subheader text-grayPrimary dark:text-graySecondary"
      >
        <time datetime="{{date format="YYYY-MM-DD"}}">
          {{date format="DD.MM.YYYY"}}
        </time>
        <span class="bull">
          â€¢
        </span>
        {{reading_time}}
      </div>
      <p
        class="pb-4 text-sm font-text text-grayPrimary dark:text-graySecondary"
      >
        {{excerpt}}
        ...
      </p>
      <div class="w-full mx-auto mb-2 text-center">
        <button
          class="p-2 text-sm antialiased bg-white rounded-none border-grayPrimary text-grayPrimary font-subheader hover:bg-graySecondary"
        >
          Read more
        </button>
      </div>
    </div>
  </a>
</article>