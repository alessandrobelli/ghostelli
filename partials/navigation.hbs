<div class="w-full pl-2">
  <ul class="text-grayPrimary">
    <!-- Loop through the navigation items -->
    {{#foreach navigation}}
    <li class="nav-{{slug}}{{#if current}} nav-current font-bold bg-blue-100 {{/if}} md:py-0 py-2  md:inline pr-2 hover:underline hover:text-graySecondary"><a class="text-black" href="{{url absolute=" true"}}">{{label}}</a></li>
    {{/foreach}}
    <!-- End the loop -->
  </ul>
</div>