<div class="w-full pl-2">
  <ul class="text-base text-center md:text-lg">

<li class="nav-{{slug}} md:py-0 py-2 md:inline mr-4 list-none">
<div
  class="relative hidden w-10 mr-2 align-middle transition duration-200 ease-in select-none xl:inline-block"
>
  <label
    for="toggle"
    class="block h-6 overflow-hidden bg-gray-300 rounded-full cursor-pointer toggle-label"
  ></label>
</div>
<label for="toggleDark" class="hidden text-xs xl:inline-block text-grayPrimary dark:text-graySecondary" id="textToggleDark">feeling Dark?</label>
    </li>

    <!-- Loop through the navigation items -->
    {{#foreach navigation}}
    <li class="nav-{{slug}} list-none {{#if current}}border-b-4 border-primary nav-current font-bold border-solid {{/if}} border-dashed hover:border-b-4 hover:border-primary md:py-0 py-2 md:inline mr-4 hover:text-graySecondary"><a class="text-grayPrimary dark:text-graySecondary" href="{{url absolute=" true"}}">{{label}}</a></li>
    {{/foreach}}
    <!-- End the loop -->
  </ul>
</div>
