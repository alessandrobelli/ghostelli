{{^is "paged"}}

<h2
  class="mt-8 text-3xl font-extrabold tracking-tight text-graySecondary gh-title sm:text-4xl"
>
  Feautured Post(s)
</h2>
{{#is "home"}}
  {{#get "posts" filter="featured:true" limit="3"}}
  {{#if posts}}
    {{#foreach posts}}
      <div class="relative mt-8 bg-white rounded-lg first:mt-0">
        <div
          class="relative h-40 bg-white sm:h-80 md:absolute md:left-0 md:w-1/2"
        >
          {{#if feature_image}}
            <img
              class="object-cover w-full h-full"
              src="{{img_url feature_image size="m"}}&sat=-100"
              alt="{{title}}"
            />
          {{else}}
            <img
              class="object-cover w-full h-full"
              src="{{@custom.default_image_posts}}"
              alt=""
            />
          {{/if}}
          <div
            aria-hidden="true"
            class="absolute inset-0 bg-gradient-to-r from-primary to-graySecondary mix-blend-multiply"
          ></div>
        </div>
        <div
          class="relative max-w-md p-4 mx-auto sm:p-0 sm:pt-4 sm:h-80 sm:max-w-7xl"
        >
          <div class="md:ml-auto md:w-1/2 md:px-4">
            <h1 class="text-xl font-semibold text-grayPrimary">
              {{title}}
            </h1>
            <span>
              {{reading_time}}
            </span>
            <span aria-hidden="true">
              ·
            </span>
            <time datetime="{{date format="YYYY-MM-DD"}}">
              {{date format="DD.MM.YYYY"}}
            </time>
            <p class="mt-3 text-lg text-grayPrimary">
              {{excerpt}}
            </p>
            <a
              href="{{url}}"
              class="text-base font-semibold text-center text-grayPrimary hover:text-graySecondary"
            >
              Read more
              <span aria-hidden="true">
                →
              </span>
            </a>
          </div>
        </div>
      </div>
    {{/foreach}}
  {{/if}}
{{/get}}
{{else}}
