<!-- Featured posts: you can reuse this page anywhere to show featured -->
<!-- or use it in tags/pages to show matching slug featured posts -->
{{^is "paged"}}

{{#is "home"}}
{{#get "posts" filter="featured:true" limit="3"}}
{{> "featured_content" posts=posts}}
{{/get}}
{{else}}

{{#get "posts" filter="featured:true+tag:{{slug}}" limit="3"}}

<div class="mt-4">
{{> "featured_content" posts=posts}}

<div class="relative mt-12">
  <div class="absolute inset-0 flex items-center" aria-hidden="true">
    <div class="w-full border-t border-graySecondary"></div>
  </div>
  <div class="relative flex justify-center">
    <span class="px-3 text-lg font-medium text-graySecondary bg-grayPrimary">
      Articles
    </span>
  </div>
</div>
</div>
{{/get}}
{{/is}}
{{/is}}