<nav class="flex items-center justify-between px-4 mt-2 sm:px-0">
  {{#if prev}}
    <div class="flex flex-1 w-0 -mt-px">
      <a
        href="{{page_url prev}}"
        class="inline-flex items-center pt-4 pr-1 text-sm font-medium border-t-2 border-transparent text-graySecondary"
      >
        <!-- Heroicon name: solid/arrow-narrow-left -->
        <svg
          class="w-5 h-5 mr-3 text-graySecondary"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20"
          fill="currentColor"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z"
            clip-rule="evenodd"
          ></path>
        </svg>
        {{t "Newer Posts"}}
      </a>
    </div>
  {{/if}}
  <div class="hidden md:-mt-px md:flex">
    {{#foreach pages}}
      <span class="page-number">
        <a
          href="#"
          class="inline-flex items-center px-4 pt-4 text-sm font-medium text-indigo-600 border-t-2 border-indigo-500"
          aria-current="page"
        >
          {{page}}
        </a>
      </span>
    {{/foreach}}
  </div>
  {{#if next}}
    <div class="flex justify-end flex-1 w-0 -mt-px">
      <a
        href="{{page_url next}}"
        class="inline-flex items-center pt-4 pl-1 text-sm font-medium border-t-2 border-transparent text-graySecondary"
      >
        {{t "Older Posts"}}
        <!-- Heroicon name: solid/arrow-narrow-right -->
        <svg
          class="w-5 h-5 ml-3 text-graySecondary"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20"
          fill="currentColor"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
            clip-rule="evenodd"
          ></path>
        </svg>
      </a>
    </div>
  {{/if}}
</nav>