{{!< default}}
<div class="relative px-4 pt-4 pb-20 gh-page sm:px-6 lg:pb-28 lg:px-8">
<div class="relative mx-auto max-w-7xl">
   {{#tag}}
   {{#if feature_image}}
   <div class="relative">
      <div class="max-w-full mx-auto sm:px-6 lg:px-8">
         <div class="relative shadow-xl sm:rounded-2xl sm:overflow-hidden">
            <div class="absolute inset-0">
               <img
               loading="lazy"
               class="object-cover w-full h-full"
               src="{{img_url feature_image size="xl"}}"
               alt="{{name}}"
               />
               <div class="absolute inset-0 bg-grayPrimary mix-blend-hard-light"></div>
            </div>
            <div class="relative px-4 py-16 sm:px-6 sm:py-24 lg:py-32 lg:px-8">
               <h1
                  class="py-4 text-4xl font-extrabold tracking-tight text-center text-transparent sm:text-5xl lg:text-6xl bg-clip-text bg-gradient-to-r from-pink-500 to-violet-500"
                  >
                  {{name}}
               </h1>
               <p class="max-w-2xl mx-auto mt-3 text-xl text-graySecondary sm:mt-4">
                  {{#if description}}
                  {{description}}
                  {{else}}
                  A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
                  {{/if}}
               </p>
            </div>
         </div>
      </div>
      {{else}}
      <div class="text-center">
         <h2 class="text-3xl font-extrabold tracking-tight text-white gh-title sm:text-4xl">{{name}}</h2>
         <p class="max-w-2xl mx-auto mt-3 text-xl text-graySecondary sm:mt-4">
            {{#if description}}
            {{description}}
            {{else}}
            A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
            {{/if}}
         </p>
      </div>
      {{/if}}
      {{> featured}}
      {{/tag}}
      <div class="grid max-w-lg gap-5 mx-auto mt-12 lg:grid-cols-3 lg:max-w-none">
         {{#foreach posts}}
         {{> "card"}} {{!-- partials/card.hbs --}}
         {{/foreach}}
      </div>
      {{pagination}}
   </div>
</div>