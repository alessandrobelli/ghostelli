{
    "name": "ghostelli",
    "description": "A higly customizable Blog+Newesletter theme for Ghost, made by Alessandro Belli",
    "demo": "https://alessandrobelli.it",
    "version": "1.0.1",
    "engines": {
        "ghost": ">=4.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Alessandro Belli",
        "email": "alessandrobelli90@gmail.com",
        "url": "https://alessandrobelli.it"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Portfolio",
            "YouTuber"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "Portfolio",
        "Alessandro Belli"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/TryGhost/Starter.git"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.2",
        "autoprefixer": "^10.4.7",
        "cssnano": "5.0.1",
        "gscan": "^4.31.2",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.0",
        "gulp-sourcemaps": "3.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "postcss": "^8.4.14",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "4.0.0",
        "tailwindcss": "^3.1.2"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "card_assets": true,
        "custom": {
            "homepage_layout": {
                "type": "select",
                "options": [
                    "Full Width",
                    "With Video(s)"
                ],
                "group": "homepage",
                "default": "With Video(s)"
            },
            "youtube_video_1_id": {
                "type": "text",
                "default": "jNQXAC9IVRw",
                "group": "homepage"
            },
            "youtube_video_2_id": {
                "type": "text",
                "default": "jNQXAC9IVRw",
                "group": "homepage"
            },
            "homepage_text_with_html": {
                "type": "text",
                "group": "homepage",
                "default": "Enter the text shown in the homepage, such as your website description."
            },
            "homepage_gray_text": {
                "type": "text",
                "group": "homepage",
                "default": "This text will be gray"
            },
            "homepage_green_text": {
                "type": "text",
                "group": "homepage",
                "default": "And this green."
            },
            "sub_homepage_text": {
                "type": "text",
                "group": "homepage",
                "default": "Subscribe to my newsletter."
            },
            "featured_in_homepage": {
                "type": "boolean",
                "default": false,
                "group": "homepage"
            },
            "theme_creator_attribution": {
                "type": "boolean",
                "default": true
            },
            "default_image_posts": {
                "type": "image",
                "group": "post"
            },
            "featured_posts_style": {
                "type": "select",
                "options": [
                    "Full Width",
                    "Classic Cards"
                ],
                "default": "Full Width"
            }
        },
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "dependencies": {}
}
