{
    "name": "ghostelli",
    "description": "A custom theme for ghost, made by Alessandro Belli",
    "demo": "https://isthisup.eu",
    "version": "0.0.1",
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Alessandro Belli",
        "email": "alessandrobelli90@gmail.com",
        "url": "https://alessandrobelli.it"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Portfolio"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "Portfolio",
        "Alessandro Belli"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/TryGhost/Starter.git"
    },
    "devDependencies": {
        "autoprefixer": "10.2.5",
        "cssnano": "5.0.1",
        "gscan": "^4.2.1",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.0",
        "gulp-sourcemaps": "3.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "3.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "dependencies": {
        "@tailwindcss/typography": "^0.4.0",
        "postcss": "^8.2.10",
        "tailwindcss": "^2.2.15"
    }
}
