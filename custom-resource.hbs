{{!< default}}
{{#post}}
<div class="px-4 py-16 mx-auto sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
    
    <div class="lg:grid lg:grid-cols-7 lg:grid-rows-1 lg:gap-x-8 lg:gap-y-10 xl:gap-x-16">
      
      <div class="lg:col-span-4 lg:row-end-1">
        <div class="overflow-hidden bg-gray-100 rounded-lg aspect-w-4 aspect-h-3">
          <img src="{{#if feature_image}} {{img_url feature_image size="m"}} {{else}} {{#if @custom.default_image_posts}}{{@custom.default_image_posts}}{{else}}{{asset "images/default.jpg"}}{{/if}}{{/if}}" alt="{{title}}" class="object-cover w-full h-full">
        </div>
      </div>
      <div class="max-w-2xl mx-auto mt-14 sm:mt-16 lg:col-span-3 lg:row-span-2 lg:row-end-2 lg:mt-0 lg:max-w-none">
        <div class="flex flex-col-reverse">
          <div class="mt-4">
            <h1 class="text-2xl font-bold tracking-tight sm:text-3xl">{{title}}</h1>
            <p class="mt-2 text-sm text-gray-500">{{#foreach tags}}  {{^match name "=" "Resources"}}{{name}}{{/match}} {{/foreach}}</p>
          </div>
        </div>

        <p class="mt-6 text-gray-500">
             {{content}}
        </p>

        <div class="pt-10 mt-10 border-t border-gray-200">
        {{> "share-block"}}
        </div>
      </div>

      <div class="w-full max-w-2xl mx-auto mt-16 lg:col-span-4 lg:mt-0 lg:max-w-none">
        <div>
          {{comments}}         
        </div>
      </div>
    </div>
  </div>
  {{/post}}