<body class="{{body_class}}">

    <div class="w-full mx-auto flex flex-wrap -mx-2 overflow-hidden sm:-mx-px md:-mx-1 lg:-mx-2 xl:-mx-2">

        <div class="font-header my-2 px-2 w-full overflow-hidden sm:my-px sm:px-px sm:w-full md:my-1 md:px-1 md:w-1/2 lg:my-2 lg:px-2 lg:w-1/2 xl:my-2 xl:px-2 xl:w-1/2"
            id="menu">
            {{navigation}}
            {{!-- <div id="hamburgerbtn" class="md:hidden text-xs w-full pb-4">
                {{>
                "icons/hamburger"}}
            </div> --}}
            {{!-- {{#if @site.youtube}}
            {{!-- <a href="{{youtube_url @site.youtube}}" title="Youtube" target="_blank" rel="noopener">{{>
                "icons/youtube"}}</a>
            {{/if}}--}}
            {{!-- <div class="hidden md:block md:w-1/3 overflow-hidden">

                {{#if @site.twitter}}
                <a href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">{{>
                    "icons/twitter"}}</a>
                {{/if}}
