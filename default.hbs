<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="{{asset " built/screen.css"}}" />

    <title>{{meta_title}} is this up? now</title>

    {{ghost_head}}
    {{!-- Outputs important meta data and settings, should always be in

    <head> --}}

    </head>

<body class="{{body_class}}">



    <div class="flex flex-wrap overflow-hidden py-6 text-center w-full" id="gh-head">
        <div class="w-full overflow-hidden hidden font-header" id="menu">
            {{navigation}}
        </div>

        <div id="hamburgerbtn" class="md:hidden text-xs w-full pb-4">
            {{>
            "icons/hamburger"}}
        </div>


        {{!-- <div class="hidden md:block md:w-1/3 overflow-hidden">
            {{#if @site.youtube}}
            {{!-- <a href="{{youtube_url @site.youtube}}" title="Youtube" target="_blank" rel="noopener">{{>
                "icons/youtube"}}</a> --}}
            {{/if}}
            {{#if @site.twitter}}
            <a href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">{{>
                "icons/twitter"}}</a>
            {{/if}}
            {{#if @site.facebook}}
            <a href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener">{{>
                "icons/facebook"}}</a>
            {{/if}}
            <a href="https://feedly.com/i/subscription/feed/{{@site.url}}/rss/" title="RSS" target="_blank"
                rel="noopener">{{> "icons/rss"}}</a>
        </div> --}}

        <div class="w-full overflow-hidden italic font-subheader">
            {{@site.description}}
        </div>

    </div>
    <main class="w-full p-2 md:p-0 md:w-2/3 lg:w-1/2 mx-auto">

        {{body}}
        {{!-- All content gets inserted here, index.hbs, post.hbs, etc --}}

    </main>

    <footer class="w-full">
        <div class="">

        </div>
    </footer>

    </div>

    {{!-- <foot> --}}

        <script src="{{asset " built/jquery-3.4.1.min.js"}}"></script>

        {{#if pagination.pages}}
        <script>
            var maxPages = parseInt('{{pagination.pages}}');
        </script>
        <script src="{{asset " built/infinitescroll.js"}}"></script>
        {{/if}}

        <script>
            $(document).ready(function () {
                let hamburger = document.getElementById('hamburgerbtn');

                let mobileMenu = document.getElementById('menu');

                hamburger.addEventListener('click', function () {
                    mobileMenu.classList.toggle('hidden');

                    mobileMenu.classList.toggle('top-0');
                    mobileMenu.classList.toggle('pt-6');
                });
            });
        </script>

        {{#is "post, page"}}
        <script src="{{asset " built/jquery.fitvids.js"}}"></script>
        <script>
            var images = document.querySelectorAll('.kg-gallery-image img');
            images.forEach(function (image) {
                var container = image.closest('.kg-gallery-image');
                var width = image.attributes.width.value;
                var height = image.attributes.height.value;
                var ratio = width / height;
                container.style.flex = ratio + ' 1 0%';
            });
            $(document).ready(function () {
                var $postContent = $(".gh-content");
                $postContent.fitVids();
            });
        </script>
        {{/is}}

        {{ghost_foot}}
        {{!-- Outputs important scripts - should always be included before closing body tag --}}

</body>

</html>